{
    "name": "insert-file",
    "displayName": "Insert File",
    "description": "insert a file contents in your active editor.",
    "version": "0.0.2",
    "publisher": "crest",
    "engines": {
        "vscode": "^1.0.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.insertFile",
                "title": "Insert File:Insert file"
            },
            {
                "command": "extension.insertAsLink",
                "title": "Insert File:Insert as link"
            },
            {
                "command": "extension.insertAsBlock",
                "title": "Insert File:Insert file contents as code block"
            },
            {
                "command": "extension.insertAsImageLink",
                "title": "Insert File:Insert link as image link"
            }

        ],
        "configuration": {
            "type": "object",
            "title": "VSCode InsertFile configuration",
            "properties": {
                "insert-file.encoding": {
                    "type": "string",
                    "default": "utf-8",
                    "description": "default file encoding"
                }
            }
        }
    },
    "scripts": {
        "clean": "rm -rf out",
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "@types/mocha": "^7.0.2",
        "@types/node": "^14.0.1",
        "@types/vscode": "^1.45.0",
        "mocha": "^7.1.2",
        "typescript": "^3.9.2",
        "vscode": "^1.1.37"
    }
}
